 <div class="col-md-3">
  <h2>User info</h2>

  <%= image_tag current_user.get_profile_image(100,100) %>



  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

<div class="row">
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>



  <h2>New book</h2>
  <!-- form_with部分 -->
 <%= form_with model: book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
  </div>

  <style>
    .btn-block {
      display:block;
      width:100%;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      margin-right: -15px;
      margin-left: -15px;

    }
  </style>
