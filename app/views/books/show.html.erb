<div><%= flash[:notice] %></div>


<div class="container px-5 px-sm-0">
<div class="row">


<div class="col-md-3">
  <h2>User info</h2>

  <%= image_tag @book.user.get_profile_image(100,100) %>



  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class ="row">
  <%= link_to edit_user_path(@book.user.id), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>


  <h2>New book</h2>
  <!-- form_with部分 -->
 <%= form_with model: @bookNew do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
  </div>


<div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
  <table class="table table-hover table-inverse">


  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id), class: 'nav-link' do%>
        <%= image_tag @book.user.get_profile_image(100,100) %><p><%= @book.user.name%></p>
        <% end %>
      </td>
      <td><%= @book.title%></td>
      <td><%= @book.body%></td>
      <td class><%if @book.user == current_user %>
          <%= link_to"Edit",edit_book_path(@book), class: 'btn btn-success' %>
          <% end %>
      </td>
      <td><% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" , class: 'btn btn-danger' %>
          <% end %>
      </td>
    </tr>

  </tbody>
  </table>
</div>
  </div>
    </div>

  <style>
    .btn-block{
      display:block;
      width:100%;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      margin-right: -15px;
      margin-left: -15px;

    }
  </style>
